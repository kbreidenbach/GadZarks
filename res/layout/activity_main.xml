<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#000000" android:id="@+id/poemLayout">
    <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="480dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:id="@+id/appLayout" android:background="@drawable/background">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/borderLayout" android:clickable="false"
                android:background="@drawable/border">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp" android:id="@+id/headerLayout">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:id="@+id/headerImageView" android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" android:layout_marginLeft="30dp"
                        android:longClickable="true"/>
                <ImageView
                        android:layout_width="43dp"
                        android:layout_height="49dp"
                        android:id="@+id/menuImageView" android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true" android:layout_marginRight="20dp"
                        android:longClickable="false" android:clickable="true"
                        android:baselineAlignBottom="false" android:layout_marginBottom="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp" android:layout_alignParentTop="true" android:layout_marginTop="390dp"
                    android:id="@+id/poemLayout">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/titleTextView" android:layout_marginLeft="30dp"
                        android:layout_marginBottom="30dp" android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/poemLineTextView" android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp" android:layout_marginBottom="15dp"/>
            </RelativeLayout>
            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp" android:layout_marginTop="70dp" android:id="@+id/mainLayout"
                    android:columnWidth="80dp" android:numColumns="auto_fit" android:stretchMode="columnWidth"
                    android:gravity="center" android:verticalSpacing="0dp" android:horizontalSpacing="0dp"
                    android:focusableInTouchMode="true">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid00" android:layout_row="0" android:layout_column="0"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid10" android:layout_row="0" android:layout_column="1"
                        android:longClickable="true" android:background="@drawable/cell_single"
                        android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid20" android:layout_row="0" android:layout_column="2"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid30" android:layout_row="0" android:layout_column="3"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid01" android:layout_row="1" android:layout_column="0"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid11" android:layout_row="1" android:layout_column="1"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid21" android:layout_row="1" android:layout_column="2"
                        android:background="@drawable/cell_single" android:longClickable="false"
                        android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid31" android:layout_row="1" android:layout_column="3"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid02" android:layout_row="2" android:layout_column="0"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid12" android:layout_row="2" android:layout_column="1"
                        android:background="@drawable/cell_single" android:longClickable="false"
                        android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid22" android:layout_row="2" android:layout_column="2"
                        android:background="@drawable/cell_single" android:longClickable="false"
                        android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid32" android:layout_row="2" android:layout_column="3"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid03" android:layout_row="3" android:layout_column="0"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid13" android:layout_row="3" android:layout_column="1"
                        android:background="@drawable/cell_single" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid23" android:layout_row="3" android:layout_column="2"
                        android:background="@drawable/cell_single" android:layout_rowSpan="2" android:clickable="true"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/grid33" android:layout_row="3" android:layout_column="3"
                        android:background="@drawable/cell_single" android:clickable="true"/>
            </GridLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/zarkLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/zarkImageView"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>